clc;
clear;

// --------------------------------------------------
// Given:
// A single-phase transmission line has two parallel
// conductors 3 metres apart.
// Radius of each conductor = 1 cm
// ε0 = 8.854 × 10^(-12) F/m
// Find capacitance per km
// --------------------------------------------------

// Given values
d = 300;          // spacing in cm (3 m = 300 cm)
r = 1;            // radius in cm
epsilon0 = 8.854e-12;

// Capacitance per meter
Cl = %pi * epsilon0 / log(d / r);
disp("Capacitance of the single-phase line (F/m) = " + string(Cl));

// Capacitance per kilometer
Cl_km = Cl * 1000;
disp("Capacitance of the single-phase line (F/km) = " + string(Cl_km));
